<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="16dp">

    <HorizontalScrollView
        android:id="@+id/horizontal_number_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <GridLayout
            android:id="@+id/horizontal_number_gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:useDefaultMargins="true" />
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/seats_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <GridLayout
                android:id="@+id/vertical_number_gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:useDefaultMargins="true" />

            <HorizontalScrollView
                android:id="@+id/seats_horizontal_scrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false">

                <GridLayout
                    android:id="@+id/seats_gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:useDefaultMargins="true" />
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>